<h1>Listing lockers</h1>

<table>
  <thead>
    <tr>
      <th>Lockernumber</th>
      <th>Location</th>
      <th>Type</th>
      <th>Combo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lockers.each do |locker| %>
      <tr>
        <td><%= locker.lockerNumber %></td>
        <td><%= locker.location %></td>
        <td><%= locker.type %></td>
        <td><%= locker.combo %></td>
        <td><%= link_to 'Show', locker %></td>
        <td><%= link_to 'Edit', edit_locker_path(locker) %></td>
        <td><%= link_to 'Destroy', locker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Locker', new_locker_path %>
